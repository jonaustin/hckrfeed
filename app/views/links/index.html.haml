- model_class = Link
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:username)
      %th= model_class.human_attribute_name(:link)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @links.each do |link|
      %tr
        %td= link.username
        %td= link_to link.link, link.link
        %td=l link.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_link_path(link), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), link_path(link), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_link_path, :class => 'btn btn-primary'
