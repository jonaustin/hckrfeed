- model_class = Link
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped#links
  %thead
    %tr
      %th
      %th Score
      %th Name
      %th
      %th Username
      %th
      %th
  %tbody
    - @links.each do |link|
      %tr
        %td= link_to 'Upvote', upvote_link_path(link), id: "upvote_#{link.id}", class: "upvote" 
        %td= link.score
        %td= link_to link.name, link_path(link)
        %td= link_to "#{link.comments.count} comments", link_path(link)
        %td= link.username
        %td= time_ago(link.created_at)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_link_path(link), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), link_path(link), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.submit_link")), new_link_path, :class => 'btn btn-primary', :id => 'fuck'
